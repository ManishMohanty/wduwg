<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 <item android:state_pressed="true" >
  <shape>
  <solid
   android:color="#2F87B0" />
  <stroke
   android:width="1dp"
   android:color="#FFFFFF" />
  <corners
   android:radius="3dp" />
  <padding
   android:left="20dp"
   android:top="10dp"
   android:right="20dp"
   android:bottom="10dp" />
  </shape>
 </item>
  <item>
  <shape>
  <gradient
   android:startColor="#2F87B0"
   android:endColor="#1F86A0"
   android:angle="270" />
  <stroke
   android:width="1dp"
   android:color="#FFFFFF" />
  <corners
   android:radius="3dp" />
  <padding
   android:left="20dp"
   android:top="0dp"
   android:right="20dp"
   android:bottom="0dp" />
 </shape>
 </item>
</selector>