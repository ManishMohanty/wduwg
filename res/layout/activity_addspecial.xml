<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/business_profile_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wduwg" />
    
    
<EditText  android:layout_width="fill_parent"
           android:layout_height="50dp"
           android:layout_below="@+id/business_profile_imageView"
           android:background="@drawable/roundededittext"
           android:layout_centerInParent="true"
           android:hint="Name"
           android:layout_marginTop="40dp"
           android:paddingLeft="5dp"
           android:textColor="#0669b1"
           android:singleLine="true"
           android:id="@+id/nameET"/>

<LinearLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/nameET"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <EditText
            android:id="@+id/startsLabel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:hint="start date"
            android:maxLines="1"
            android:textColor="#0669b1" />

        <EditText
            android:id="@+id/startstime"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:hint="start time"
            android:maxLines="1"
            android:textColor="#0669b1" />
    </LinearLayout>
    

<LinearLayout
        android:id="@+id/ll2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <EditText
            android:id="@+id/endsLabel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:hint="end date"
            android:maxLines="1"
            android:textColor="#0669b1" />

        <EditText
            android:id="@+id/endstime"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:hint="end time"
            android:maxLines="1"
            android:textColor="#0669b1" />
    </LinearLayout>



<TextView  android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/continueText"
         android:textSize="21sp"
         android:textColor="#0669b1"
         android:layout_below="@id/ll2"
         android:clickable="true"
         android:onClick="save"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:layout_marginTop="20dp"/>
</RelativeLayout>
