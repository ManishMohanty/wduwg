<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_special_LL"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="30dp"
    tools:context=".AddSpecialActivity" >

    <ScrollView
        android:id="@+id/my_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/business_profile_imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/wduwg" />

            <TextView
                android:id="@+id/header_TV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_profile_imageView"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Please tell us what Special you are having"
                android:textColor="#0669b1"
                android:textSize="20sp" />

            <com.mw.wduwg.services.MyAutoCompleteTextView
                android:id="@+id/nameET"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/header_TV"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:hint="Add a title for your Special"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="#0669b1" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/nameET"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <EditText
                    android:id="@+id/startsLabel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:hint="start date"
                    android:maxLines="1"
                    android:textColor="#0669b1" />

                <EditText
                    android:id="@+id/startstime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:hint="start time"
                    android:maxLines="1"
                    android:textColor="#0669b1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ll1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1" >

                <EditText
                    android:id="@+id/endsLabel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:hint="end date"
                    android:maxLines="1"
                    android:textColor="#0669b1" />

                <EditText
                    android:id="@+id/endstime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:hint="end time"
                    android:maxLines="1"
                    android:textColor="#0669b1" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll2"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" >

                <TextView
                    android:id="@+id/continueTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ll2"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:onClick="save"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="@string/continueText"
                    android:textColor="#0669b1"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/deleteSpecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ll2"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    android:onClick="onDelete"
                    android:text="@string/delete"
                    android:textColor="#0669b1"
                    android:textSize="21sp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>