<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BusinessHomePageActivity"
    android:id="@+id/add_event_and_gateway_LL"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="30dp"
     >

        <com.loopj.android.image.SmartImageView
            android:id="@+id/photo"
             android:layout_width="80dp"
           android:layout_height="80dp"
         android:layout_centerHorizontal="true"
        android:src="@drawable/wduwg_logo2223"
            android:background="@drawable/round_image" />
        
        <TextView
        android:id="@+id/header_TV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Please provide your business details"
        android:textColor="#0669b1"
        android:textSize="20sp" />


        <EditText
            android:id="@+id/customer_name"
            android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/header_TV"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Add a title for your Business"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="#0669b1" />


            <EditText
                android:id="@+id/customer_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="Address"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/customer_name"
                android:singleLine="true"
                android:textColor="#0669b1"
                 />
            
   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp" >     
        
       <TextView android:id="@+id/link"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:text="@string/add_business"
                      android:onClick="link"
                      android:textColor="#0669b1"
                      android:textSize="21sp"
                      android:clickable="true"
                      />
        

    </RelativeLayout>

</RelativeLayout>
