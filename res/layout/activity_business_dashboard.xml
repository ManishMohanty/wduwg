<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical" >
    
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Current Upcoming Events"
              android:textSize="20sp"
              android:textColor="#0669b1"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="5dp"/>
    
   <ListView android:layout_width="340dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:background="#ffffff"
              android:divider="#E7E7E7"
              android:dividerHeight="10.0dp"
              android:id="@+id/evntlistView" >
       
   </ListView> 
   
   <TextView  android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="All Events"
              android:textSize="20dp"
              android:clickable="true"
              android:textColor="#ff0000"/>
  <View android:background="@drawable/splash_image"
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        />
    
   <ListView android:layout_width="340dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:background="#ffffff"
              android:divider="#E7E7E7"
              android:dividerHeight="10.0dp"
              android:id="@+id/speciallistView" >
       
   </ListView> 
   
   <View android:background="@drawable/splash_image"
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>
