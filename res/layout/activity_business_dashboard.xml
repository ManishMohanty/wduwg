<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:weightSum="1"
    android:orientation="vertical" >
    
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight=".37"
                    android:background="#ffffff"
                    >
    
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Current/Upcoming Events"
              android:id="@+id/events_label"
              android:textSize="20sp"
              android:textColor="#0669b1"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="5dp"/>
    
   <ListView android:layout_width="340dp"
              android:layout_height="wrap_content"
              android:layout_below="@+id/events_label"
              android:layout_gravity="center_horizontal"
              android:dividerHeight="1.0dp"
              android:divider="#E7E7E7"
              android:id="@+id/evntlistView" >
       
   </ListView> 
   
   <TextView  android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/allEvents"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:textSize="20dp"
              android:clickable="true"
              android:onClick="allEvents"
              android:textColor="#ff0000"/>
   
   </RelativeLayout>
  <View 
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        />
  
  <RelativeLayout android:layout_width="fill_parent"
                  android:layout_height="0dip"
                  android:background="#ffffff"
                  android:layout_marginLeft="10dp"
                  android:layout_weight=".37"
                    android:layout_marginRight="10dp"
                  >
   <TextView  android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/special_labels"
              android:text="Current/Upcoming Specials"
              android:textSize="20sp"
              android:textColor="#0669b1"
              android:layout_centerHorizontal="true"
              android:layout_alignParentTop="true"
              />
      
    
   <ListView android:layout_width="340dp"
              android:layout_height="wrap_content"
              android:layout_below="@+id/special_labels"
              android:layout_gravity="center_horizontal"
              android:dividerHeight="1.0dp"
              android:divider="#E7E7E7"
              android:id="@+id/speciallistView" >
              
       
       
   </ListView> 
   <TextView  android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:text="@string/allSpecials"
              android:clickable="true"
              android:onClick="allSpecials"
              android:textSize="20dp"
              android:textColor="#ff0000"/>
   
   </RelativeLayout>
   
   <View 
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        />
   
   <RelativeLayout  android:layout_width="fill_parent"
                    android:layout_height="0dip"
                    android:background="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".24"
                    android:layout_marginRight="10dp" >
   <TextView  android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/visitorLabel"
              android:layout_centerHorizontal="true"
              android:text="Current Visitors"
              android:textSize="20sp"
              android:textColor="#0669b1"
              android:layout_alignParentTop="true"/>
   
   <TextView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/totalCount"
             android:layout_below="@+id/visitorLabel"
             android:text="Total Count:"
             android:textStyle="bold"
             android:layout_marginLeft="10dp"
             android:textSize="16sp"
             android:textColor="#686B69"/>
   <TextView  android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:id="@+id/menCount"
              android:layout_below="@+id/totalCount"
              android:text="Men Count:"
              android:textStyle="bold"
              android:textSize="16sp"
              android:textColor="#686B69"  /> 
   <TextView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:id="@+id/womenCount"
             android:layout_below="@+id/menCount"
             android:text="Women Count:"
             android:textStyle="bold"
             android:textColor="#686B69"
             android:textSize="16sp"
             />   
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/womenCount"
              android:id="@+id/totalVisitor"
              android:text="Total Visitors Today:"
              android:textStyle="bold"
              android:layout_marginLeft="10dp"
              android:textColor="#686B69"
              android:textSize="16sp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/womenCount"
              android:layout_alignParentRight="true"
              android:text="@string/view"
              android:textColor="#ff0000"
              android:textSize="20sp"
              android:clickable="true"
              android:onClick="viewDetail"/>
   </RelativeLayout>

</LinearLayout>
