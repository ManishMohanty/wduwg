<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/womenLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
<!--         android:layout_above="@+id/menLayout"  -->

        <LinearLayout
            android:id="@+id/women_in"
            android:layout_width="120px"
            android:layout_height="65px"
            android:layout_alignParentLeft="true"
            android:background="@drawable/women_in" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="35px"
                android:text="20"
                android:textColor="#ffffff"
                android:textSize="80px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/women_out"
            android:layout_width="120px"
            android:layout_height="65px"
            android:layout_alignParentRight="true"
            android:background="@drawable/women_out" >
            <TextView  android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="20"
                       android:textSize="80px"
                       android:layout_marginLeft="25px"
                       android:layout_marginTop="35px"
                       android:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/womenLayout" >

        <LinearLayout
            android:id="@+id/women_in"
            android:layout_width="120px"
            android:layout_height="65px"
            android:layout_alignParentLeft="true"
            android:background="@drawable/men_in" >
            <TextView  android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="50px"
                       android:layout_marginTop="35px"
                       android:text="20"
                       android:textSize="80px"
                       android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/men_out"
            android:layout_width="120px"
            android:layout_height="65px"
            android:layout_alignParentRight="true"
            android:background="@drawable/men_out" >
            <TextView  android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="50px"
                       android:layout_marginTop="35px"
                       android:text="20"
                       android:textSize="80px"
                       android:textColor="#ffffff"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>