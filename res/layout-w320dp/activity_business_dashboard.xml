<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical"
     >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/visitorLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/one_side_border"
            android:clickable="true"
            android:onClick="viewDetail"
            android:paddingLeft="10dp"
            android:text="Attendance"
            android:textColor="#686B69"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/totalCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/visitorLabel"
            android:background="@drawable/one_side_border"
            android:paddingLeft="10dp"
            android:text="Total Count:"
            android:textColor="#686B69"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/menCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalCount"
            android:background="@drawable/one_side_border"
            android:paddingLeft="10dp"
            android:text="Men Count:"
            android:textColor="#686B69"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/womenCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menCount"
            android:background="@drawable/one_side_border"
            android:paddingLeft="10dp"
            android:text="Women Count:"
            android:textColor="#686B69"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalVisitor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/womenCount"
            android:paddingLeft="10dp"
            android:text="Total Visitors Today:"
            android:textColor="#686B69"
            android:textSize="28sp"
            android:textStyle="bold" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/gt"
            android:clickable="true"
            android:onClick="viewDetail" />
    </RelativeLayout>
    
     <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/events_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/one_side_border"
            android:clickable="true"
            android:onClick="allEvents"
            android:paddingLeft="10dp"
            android:text="Events"
            android:textColor="#686B69"
            android:textSize="36sp" />

        <GridView
            android:id="@+id/eventGV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/events_label"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:columnWidth="100dp"
            android:gravity="center"
            android:horizontalSpacing="12dp"
            android:numColumns="2"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="12dp" >
        </GridView>

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/gt"
            android:clickable="true"
            android:onClick="allEvents" />

    </RelativeLayout>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/special_labels"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/one_side_border"
            android:clickable="true"
            android:onClick="allSpecials"
            android:paddingLeft="10dp"
            android:text="Specials"
            android:textColor="#686B69"
            android:textSize="36sp" />


        <GridView
            android:id="@+id/specialGV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/special_labels"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:columnWidth="160dp"
            android:gravity="center"
            android:horizontalSpacing="12dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="12dp" >
        </GridView>

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/gt"
            android:clickable="true"
            android:onClick="allSpecials" />
    </RelativeLayout>
</LinearLayout>
</ScrollView>